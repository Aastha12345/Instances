<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">EDIT <% blog.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" value="<%= blog.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]"  value="<%= blog.image %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[description]" value="<%= blog.description %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit!</button>
                </div>    
            </form>
            <a href="/blogs/<%=blog._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>