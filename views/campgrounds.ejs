<% include partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To ScenicGuides</h1>
            <p>Pretty much EVERYTHING you want to know</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Place</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(place){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= place.image %>" 
                        alt="<%= place.name %>">
                    <div class="caption">
                        <h4><%= place.name %></h4>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>