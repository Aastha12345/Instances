<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        <h2 class="text-center text-light">Add New Comment to <%= blog.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add Comment" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit!</button>
                </div>    
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>