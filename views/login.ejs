<% include ./partials/header %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="col-sm-8 offset-sm-2">
                        <h4 class="text-primary my-3 text-center">Login to your account</h4>
                        <form action="/login" method="post">
                            <div class="form-group row">
                                <label for="username">Username</label>
                                <input class="form-control form-control-sm" name="username" id="username" type="text"
                                    placeholder="e.g. username" required>
                            </div>
                            <div class="form-group row">
                                <label for="password">Password</label>
                                <input class="form-control form-control-sm" name="password" id="password"
                                    type="password" required>
                            </div>
                            <!-- <div class="form-group form-check">
                                                <input type="checkbox" class="form-check-input" />
                                                <label for="remember" class="form-check-label">Remember Me</label>
                                        </div> -->
                            <div class="form-group row">
                                <button class="btn btn-sm btn-primary btn-block" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>